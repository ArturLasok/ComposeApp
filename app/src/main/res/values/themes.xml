<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- DAY Nothing here matters EXCEPT THE STATUS BAR COLOR. The theme is obtained from [Theme.kt] -->
    <style name="Theme.ArturFont" parent="Theme.MaterialComponents">
        <item name="android:fontWeight">600</item>
        <item name="fontWeight">600</item>
        <item name="fontFamily">sans-serif-medium</item>

    </style>
    <style name="Theme.RuchAppArtur" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/backlight</item>
        <item name="colorPrimaryVariant">@color/back</item>
        <item name="colorOnPrimary">@color/back</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/backlight</item>
        <item name="android:navigationBarColor">@color/backlight</item>

    </style>
    <!-- NIGHT -->
    <style name="Theme.RuchAppArturnight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/back</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/backlight</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/back</item>
        <item name="android:navigationBarColor">@color/back</item>
    </style>
    <style name="Theme.RuchAppArtur.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RuchAppArtur.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RuchAppArtur.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>